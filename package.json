{
    "name": "tyd-lang",
    "displayName": "TyD",
    "description": "Syntax highlighting for Tynan's Tidy Data Language",
    "version": "1.2.0",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/MattA-Official/tyd-lang"
    },
    "license": "See LICENSE.md",
    "publisher": "Matthew-Adcock",
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npx -p typescript tsc -build",
        "watch": "npx -p typescript tsc --build -watch",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "package": "npm run compile && npx vsce package"
    },
    "main": "./client/out/extension",
    "activationEvents": [
        "onLanguage:tyd",
        "onLanguage:ttyd"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "TyD Language Server Configuration",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "languages": [
            {
                "id": "tyd",
                "aliases": [
                    "TyD",
                    "tyd"
                ],
                "extensions": [
                    ".tyd"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "ttyd",
                "aliases": [
                    "tTyD",
                    "ttyd"
                ],
                "extensions": [
                    ".ttyd"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tyd",
                "scopeName": "source.tyd",
                "path": "./syntaxes/tyd.tmLanguage.json"
            },
            {
                "language": "ttyd",
                "scopeName": "source.tyd",
                "path": "./syntaxes/tyd.tmLanguage.json"
            }
        ]
    },
    "devDependencies": {
        "@types/mocha": "^7.0.2",
        "mocha": "^8.0.1",
        "@types/node": "^14.0.23",
        "eslint": "^6.4.0",
        "@typescript-eslint/parser": "^3.6.1",
        "typescript": "^3.9.4",
        "npx": "10.2.2"
    },
    "dependencies": {
        "vscode-extension-telemetry": "~0.1.2"
    }
}
